{
  "version": "1.0.0",
  "defaultTheme": "light",
  "supportedThemes": ["light", "dark"],
  "config": {
    "enableSystemTheme": true,
    "enableTransitions": true,
    "transitionDuration": "200ms",
    "persistTheme": true,
    "storageKey": "theme-preference"
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms"
    },
    "easing": {
      "linear": "linear",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "zIndex": {
    "hide": -1,
    "auto": "auto",
    "base": 0,
    "docked": 10,
    "dropdown": 1000,
    "sticky": 1100,
    "banner": 1200,
    "overlay": 1300,
    "modal": 1400,
    "popover": 1500,
    "skipLink": 1600,
    "toast": 1700,
    "tooltip": 1800
  },
  "accessibility": {
    "focusRingWidth": "2px",
    "focusRingOffset": "2px",
    "focusRingOpacity": 0.5,
    "reducedMotion": {
      "respectUserPreferences": true,
      "fallbackTransition": "none"
    }
  },
  "customProperties": {
    "enableCSSVariables": true,
    "prefix": "--fleek",
    "generateUtilities": true
  }
} 